{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",        // Node utilise CommonJS
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,     // ← très important pour que les imports soient reconnus
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
